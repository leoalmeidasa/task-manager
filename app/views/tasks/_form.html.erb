<%= form_with(model: [@project, @task], class: "needs-validation", novalidate: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, t('task.form.title'), class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
    <div class="invalid-feedback"><%= t('task.form.title_invalid') %></div>
  </div>
  <div class="mb-3">
    <%= form.label :description, t('task.form.description'), class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :status_id, t('task.form.status'), class: "form-label" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, { prompt: t('task.form.status_prompt') }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :priority_id, t('task.form.priority'), class: "form-label" %>
    <%= form.collection_select :priority_id, Priority.all, :id, :level, { prompt: t('task.form.priority_prompt') }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :due_date, t('task.form.due_date'), class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :user_id, t('task.form.user'), class: "form-label" %>
    <%= form.collection_select :user_id, @project.members, :id, :email, { include_blank: t('task.form.user_none') }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :attachments, t('task.form.attachments'), class: "form-label" %>
    <%= form.file_field :attachments, multiple: true, class: "form-control" %>
  </div>
  <%= form.submit t('task.form.submit'), class: "btn btn-primary" %>
<% end %>