<%= form_with(model: [@project, task], class: "needs-validation", novalidate: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", required: true %>
    <div class="invalid-feedback">Por favor, insira o t√≠tulo da tarefa.</div>
  </div>
  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :status_id, "Status", class: "form-label" %>
    <%= form.collection_select :status_id, Status.all, :id, :name, { prompt: "Selecione um status" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :priority_id, "Prioridade", class: "form-label" %>
    <%= form.collection_select :priority_id, Priority.all, :id, :level, { prompt: "Selecione uma prioridade" }, class: "form-select" %>
  </div>
  <div class="mb-3">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= form.label :attachments, class: "form-label" %>
    <%= form.file_field :attachments, multiple: true, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
<% end %>