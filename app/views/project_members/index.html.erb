<!-- app/views/project_members/index.html.erb -->
<div class="container mt-4">
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Membros do Projeto: <%= @project.name %></h5>
          <% if @project.user_id == current_user.id %>
            <%= link_to "Adicionar Membro", new_project_project_member_path(@project), class: "btn btn-light btn-sm" %>
          <% end %>
        </div>
        <div class="card-body">
          <% if @project_members.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                <tr>
                  <th>Nome</th>
                  <th>Email</th>
                  <th>Data de Adição</th>
                  <% if @project.user_id == current_user.id %>
                    <th>Ações</th>
                  <% end %>
                </tr>
                </thead>
                <tbody>
                <% @project_members.each do |member| %>
                  <tr>
                    <td><%= member.user.email.split('@').first %></td>
                    <td><%= member.user.email %></td>
                    <td><%= member.created_at.strftime("%d/%m/%Y") %></td>
                    <% if @project.user_id == current_user.id %>
                      <td>
                        <%= button_to "Remover", project_project_member_path(@project, member),
                                      method: :delete,
                                      class: "btn btn-danger btn-sm",
                                      data: { confirm: "Tem certeza que deseja remover este membro?" } %>
                      </td>
                    <% end %>
                  </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="alert alert-info">
              Nenhum membro adicionado a este projeto ainda.
            </div>
          <% end %>
        </div>
        <div class="card-footer">
          <%= link_to "Voltar ao Projeto", project_path(@project), class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>