<head>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap JS and Popper.js -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
      /* Custom styles for fixed sidebar and responsive content */
      html, body {
          height: 100%;
          margin: 0;
          overflow-x: hidden;
      }
      #sidebar-project {
          min-width: 200px;
          max-width: 250px;
          height: calc(100vh - 55px); /* Adjust 56px to match your navbar height */
          position: fixed;
          top: 80px; /* Offset to start below navbar */
          left: 0;
          z-index: 1000;
          background-color: #1e1f22;
      }
      #content {
          margin-left: 20px;
          padding: 20px;
      }
      /* Mobile screens */
      @media (max-width: 768px) {
          #sidebar-project {
              min-width: 200px; /* Slightly narrower on mobile for better usability */
              max-width: 200px;
          }
          #content {
              margin-left: 200px;
              width: calc(100% - 20px);
          }
      }
      /* Responsive container */
      .container {
          max-width: 100%;
          padding-left: 15px;
          padding-right: 15px;
      }
  </style>
</head>
<body>
<!-- Sidebar -->
