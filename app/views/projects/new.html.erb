<div class="container mt-5">
  <div class="text-center mb-4">
    <h2 class="fw-bold text-secondary">
      <%= @project.persisted? ? t('projects.form.edit_title') : t('projects.form.new_title') %>
    </h2>
  </div>

  <%= form_with(model: @project, local: true, html: { class: "shadow p-4 rounded bg-light" }) do |form| %>

    <% if @project.errors.any? %>
      <div class="alert alert-danger">
        <h5><%= t('projects.form.errors_found', count: @project.errors.count) %></h5>
        <ul class="mb-0">
          <% @project.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, t('projects.form.name'), class: "form-label fw-semibold" %>
      <%= form.text_field :name, class: "form-control", placeholder: t('projects.form.name_placeholder') %>
    </div>

    <div class="mb-3">
      <%= form.label :description, t('projects.form.description'), class: "form-label fw-semibold" %>
      <%= form.text_area :description, class: "form-control", placeholder: t('projects.form.description_placeholder'), rows: 4 %>
    </div>

    <div class="text-end">
      <%= form.submit (@project.persisted? ? t('projects.form.update') : t('projects.form.create')), class: "btn btn-primary px-4" %>
    </div>
  <% end %>
</div>