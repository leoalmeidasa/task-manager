<%= content_tag :div, class: "container mt-5" do %>
  <%= content_tag :div, class: "card shadow-sm" do %>
    <%= content_tag :div, class: "card-body" do %>
      <%= content_tag :h1, (@project.name.present? ? @project.name : t('projects.untitled')), class: "card-title mb-4" %>

      <%= content_tag :div, class: "mb-4" do %>
        <%= content_tag :p, class: "card-text" do %>
          <%= content_tag :strong, t('projects.description') %>:
          <%= @project.description.present? ? simple_format(@project.description) : t('projects.no_description') %>
        <% end %>

        <%= content_tag :p, class: "card-text" do %>
          <%= content_tag :strong, t('projects.created_by') %>:
          <%= @project.user&.email || t('projects.unknown_user') %>
        <% end %>
      <% end %>

          <%= content_tag :div, class: "d-flex flex-wrap gap-2" do %>
            <%= link_to t('actions.edit'), edit_project_path(@project),
                        class: "btn btn-primary",
                        data: { turbo: false } %>

            <%= link_to t('actions.back'), projects_path,
                        class: "btn btn-outline-secondary" %>

            <%= link_to t('projects.manage_members'), project_project_members_path(@project),
                         class: "btn btn-outline-secondary" %>

            <%= link_to t('projects.view_tasks'), project_tasks_path(@project),
                        class: "btn btn-outline-secondary" %>
          <% end %>
        <% end %>
      <% end %>
    <% end %>

    <% content_for :head do %>
