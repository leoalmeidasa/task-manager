<div class="card shadow-sm">
  <div class="card-header bg-primary text-white">
    <h2 class="card-title mb-0">Meus Projetos</h2>
  </div>
  <div class="card-body">
    <!-- Título com estilo -->
    <div class="text-center mb-4">
      <h3 class="fw-bold text-primary">Gerenciador de Projetos</h3>
      <p class="lead text-muted">Acompanhe, edite e organize seus projetos com facilidade.</p>
    </div>

    <!-- Botão de novo projeto -->
    <div class="d-flex justify-content-end mb-3">
      <%= link_to new_project_path, class: 'btn btn-success' do %>
        <i class="bi bi-plus-circle me-1"></i> Novo Projeto
      <% end %>
    </div>

    <!-- Tabela de projetos -->
    <div class="table-responsive">
      <table class="table table-hover table-bordered align-middle shadow-sm">
        <thead class="table-primary text-center">
        <tr>
          <th>Nome</th>
          <th>Descrição</th>
          <th>Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @projects = Project.where(user_id: current_user.id) %>
        <% if @projects.present? %>
          <% @projects.each do |project| %>
            <tr>
              <td><%= project.name %></td>
              <td><%= project.description %></td>
              <td class="text-center">
                <div class="btn-group" role="group">
                  <%= link_to project, class: 'btn btn-sm btn-outline-info' do %>
                    <i class="bi bi-eye"></i>
                  <% end %>
                  <%= link_to edit_project_path(project), class: 'btn btn-sm btn-outline-secondary' do %>
                    <i class="bi bi-pencil"></i>
                  <% end %>
                  <%= link_to project, method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Tem certeza que deseja excluir este projeto?' }, class: 'btn btn-sm btn-outline-danger' do %>
                    <i class="bi bi-trash"></i>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="3" class="text-center text-muted">
              <div class="py-4">
                <i class="bi bi-folder-x fs-1 d-block mb-2"></i>
                Nenhum projeto encontrado.
                <div class="mt-2">
                  <%= link_to new_project_path, class: 'btn btn-primary btn-sm' do %>
                    <i class="bi bi-plus-circle me-1"></i> Criar meu primeiro projeto
                  <% end %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>