<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 animate__animated animate__fadeIn" style="background: linear-gradient(145deg, #ffffff, #f8fafc);">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-2xl font-bold text-gray-800 text-center mb-4"><%= t('devise.passwords.new.forgot_password') %></h2>

          <%= form_for(resource, as: resource_name, url: user_password_path(resource_name), html: { method: :post, class: "d-flex flex-column gap-3" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, t('devise.labels.email'), class: "form-label text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true %>
              <div class="form-text text-muted"><%= t('devise.passwords.new.instructions') %></div>
            </div>

            <div class="d-grid">
              <%= f.submit t('devise.passwords.new.send_instructions'), class: "btn btn-success w-100 py-2 rounded-md transition-all duration-300 hover:bg-green-600 focus:ring-2 focus:ring-green-500 focus:ring-offset-2", data: { disable_with: t('devise.passwords.new.sending') } %>
            </div>
          <% end %>

          <div class="text-center text-sm text-gray-600 mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-2px);
    }
</style>