<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow-sm border-0 animate__animated animate__fadeIn" style="background: linear-gradient(145deg, #ffffff, #f8fafc);">
        <div class="card-body p-4 p-md-5">
          <h2 class="text-2xl font-bold text-gray-800 text-center mb-4">Sign Up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "d-flex flex-column gap-3", data: { turbo: false } }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label text-sm font-medium text-gray-700" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true, "aria-describedby": "emailHelp emailError" %>
              <div id="emailHelp" class="form-text text-muted">We'll never share your email.</div>
              <div id="emailError" class="invalid-feedback">Please enter a valid email.</div>
            </div>

            <div class="mb-3 position-relative">
              <%= f.label :password, class: "form-label text-sm font-medium text-gray-700" %>
              <% if @minimum_password_length %>
                <span class="form-text text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</span>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true, "aria-describedby": "passwordError" %>
              <button type="button" class="btn btn-outline-secondary position-absolute end-0 top-50 translate-middle-y mt-1 me-2" onclick="togglePassword('resource_password')" aria-label="Toggle password visibility">
                <i class="bi bi-eye"></i>
              </button>
              <div id="passwordError" class="invalid-feedback">Password is required.</div>
            </div>

            <div class="mb-3 position-relative">
              <%= f.label :password_confirmation, class: "form-label text-sm font-medium text-gray-700" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control mt-1 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500", required: true, "aria-describedby": "passwordConfirmationError" %>
              <button type="button" class="btn btn-outline-secondary position-absolute end-0 top-50 translate-middle-y mt-1 me-2" onclick="togglePassword('resource_password_confirmation')" aria-label="Toggle password confirmation visibility">
                <i class="bi bi-eye"></i>
              </button>
              <div id="passwordConfirmationError" class="invalid-feedback">Password confirmation is required.</div>
            </div>

            <div class="d-grid">
              <%= f.submit "Sign Up", class: "btn btn-success w-100 py-2 rounded-md transition-all duration-300 hover:bg-green-600 focus:ring-2 focus:ring-green-500 focus:ring-offset-2", id: "submitBtn", data: { disable_with: "Signing Up..." } %>
            </div>
          <% end %>

          <div class="text-center text-sm text-gray-600 mt-4">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
    .btn-success {
        background-color: #16a34a;
        border-color: #16a34a;
    }
    .btn-success:hover {
        background-color: #15803d;
        border-color: #15803d;
    }
    .card {
        transition: transform 0.2s ease-in-out;
    }
    .card:hover {
        transform: translateY(-2px);
    }
    .animate__fadeIn {
        animation: fadeIn 0.5s ease-in;
    }
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
</style>

<script>
    function togglePassword(fieldId) {
        const field = document.querySelector(`#${fieldId}`);
        const toggleBtn = field.nextElementSibling.querySelector('.bi');
        if (field.type === 'password') {
            field.type = 'text';
            toggleBtn.classList.remove('bi-eye');
            toggleBtn.classList.add('bi-eye-slash');
        } else {
            field.type = 'password';
            toggleBtn.classList.remove('bi-eye-slash');
            toggleBtn.classList.add('bi-eye');
        }
    }
</script>